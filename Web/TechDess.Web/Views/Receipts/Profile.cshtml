@model TechDess.Web.ViewModels.Receipts.ListReceiptProfileViewModel


@{
    ViewData["Title"] = "My Receipts";
}

<h1 class="text-center text-dark">@ViewData["Title"]</h1>
<hr class="hr-2 w-50 "style="background-color: #483d8b;">
<table class="table table-hover">
    <thead>
    <tr class="row text-dark text-center font-weight-bold">
        <th class="col-md-4 h3">Id</th>
        <th class="col-md-2 h3">Issued On</th>
        <th class="col-md-2 h3">Total</th>
        <th class="col-md-1 h3">Products</th>
        <th class="col-md-3 h3">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var receipt in Model.ReceiptProfileViewModels)
    {
        <tr class="row text-dark text-center font-weight-bold">
            <td class="col-md-4 h5">@receipt.Id</td>
            <td class="col-md-2 h5">@receipt.CreatedOn.ToString("dd/MM/yyyy")</td>
            <td class="col-md-2 h5">$@(receipt.Total.ToString("F2"))</td>
            <td class="col-md-1 h5">@receipt.Products</td>
            <td class="col-md-3">
                <a href="/Receipts/Detail/@receipt.Id" class="btn font-weight-bold text-white"style="background-color: #483d8b;">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
