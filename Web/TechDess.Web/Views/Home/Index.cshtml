@using TechDess.Common
@using TechDess.Data.Models
@model TechDess.Web.ViewModels.Home.IndexProductTypesViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-md-left ">
    <h4>CATEGORIES</h4>
    <div class="row">
        <div class="col-md-2">
            @foreach (var productType in this.Model.ProductTypes)
            {
                <ul class="list-group">
                    <li class="list-group-item bg-dark"> <a asp-controller="Products" asp-action="List" asp-route-id="@productType.Id" class="btn btn-dark text-white">@productType.Name</a> </li>

                </ul>
            }

        </div>
        <div class="col-md-10">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item active ">
                        <img class="d-block w-auto offset-2" src="img/h4-slide.png" alt="First slide"/>
                        <div class="offset-md-5">
                            <h2 class="caption title">
                                iPhone <span class="primary">6 <strong>Plus</strong></span>
                            </h2>
                            <h4 class="caption subtitle">Dual SIM</h4>
                        </div>

                    </div>
                    <div class="carousel-item ">
                        <img class="d-block w-auto offset-2" src="img/h4-slide3.png" alt="Second slide">
                        <div class="offset-5">
                            <h2 class="caption title">
                                Apple <span class="primary">Store <strong>Ipod</strong></span>
                            </h2>
                            <h4 class="caption subtitle">Select Item</h4>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-auto offset-2" src="img/h4-slide4.png" alt="Third slide">
                        <div class="offset-5">
                            <h2 class="caption title">
                                Apple <span class="primary">Store <strong>Ipod</strong></span>
                            </h2>
                            <h4 class="caption subtitle">& Phone</h4>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>