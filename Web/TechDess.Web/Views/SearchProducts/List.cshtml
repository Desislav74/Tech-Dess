@model TechDess.Web.ViewModels.SearchProducts.ListViewModel

@{
    ViewData["Title"] = "Search result";
}

<div class="alert alert-light text-center text-primary" role="alert">
    <h1>@ViewData["Title"]</h1>
</div>

@if (!Model.Products.Any())
{
    <p>Nothing found.</p>
}
else
{
    <div class="row">
        @foreach (var product in this.Model.Products)
        {
            <div class="card col-md-3">
                <img class="card-img-top" src="@product.Image" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.ProductType.Name</p>
                    <p class="card-text">@product.Price lv.</p>
                    <a asp-controller="Products" asp-action="ById" asp-route-id="@product.Id" class="btn btn-outline-primary">Go to product</a>
                </div>
            </div>
        }
    </div>
}
